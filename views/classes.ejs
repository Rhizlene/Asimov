<body>
  <% if(jwtData.roles == 2){%>
    <%- include('headerProfesseur') %>
  <% }else if(jwtData.roles == 3){ %>
    <%- include('headerProviseur') %>
  <% }else{ %>
    <%- include('headerEleve') %>
  <% } %>

  <div class="container my-5 w-25 text-center">
      <div class="row d-flex justify-content-between">
        <div class="col-md-12 text-center">
          <table class="table table-striped table-bordered">
            <thead class="text-center">
              <tr>
                <th>Nom</th>
                <% if(jwtData.roles == 3){%>
                  <th>Suppression</th>
                <% } %>
              </tr>
            </thead>
            <tbody class="text-center">
              <% dataClasse.forEach(function(data){ %>
                <tr>
                  <td><a href="http://localhost:4000/eleves/afficherUneClasse/<%=data.id_classe%>" style="text-decoration: none !important;"><%= data.nom_classe %></a></td>
                  <% if(jwtData.roles == 3){%>
                    <td><a href="http://localhost:4000/classes/supprimerClasse/<%=data.id_classe%>" class="btn btn-outline-danger btn-sm">‚ùå</a></td>
                  <% } %>
                </tr>
              <% })%>
            </tbody>
          </table>
        </div>
      </div>
   
      <hr class="my-4">
<div class="container">
<% if(jwtData.roles == 3){%>
  <h2> Ajouter une classe </h2>
    <div class="container mt-4">
      <div class="row justify-content-center">
        <div class="">
          <form action="/classes/ajouterClasse" method="POST">
            <div class="input-group">
              <span class="input-group-text" for="nom">Nom </span>
              <input type="text" class="form-control" name="nom" id="nom" required>
            </div>
            <div class="text-center my-3">
              <button type="submit" class="btn btn-block mx-3 text-light" style="background-color: #2e2ca2;">Envoyer</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    

<% } %>
</div>


</div>
    
</body>
</html>