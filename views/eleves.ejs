<body>

    <% if(jwtData.roles == 2){%>
        <%- include('headerProfesseur') %>
      <% }else if(jwtData.roles == 3){ %>
        <%- include('headerProviseur') %>
      <% }else{ %>
        <%- include('headerEleve') %>
      <% } %>
  
      <div class="container w-75 p-5">
        <table class="table text-center table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Classe</th>
                    <% if(jwtData.roles == 3){%>
                        <th>Modification</th>
                        <th>Suppression</th>
                    <% } %>
                </tr>
            </thead>
            <tbody class="text-center">
                <% dataEleve.forEach(function(data){ %>
                    <tr>
                        <td><a href="http://localhost:4000/notes/notesEleve/<%=data.eleve_Id%>"><%= data.nom_eleve %></a></td>
                        <td><%= data.prenom_eleve %></td>
                        <td><%= dataClasse[data.id_classe - 1].nom_classe %></td>
                        <% if(jwtData.roles == 3){%>
                            <td><a class="btn btn-outline-info btn-sm" href="http://localhost:4000/eleves/modifierEleve/<%=data.eleve_Id%>">✏️</a></td>
                            <td><a class="btn btn-outline-danger btn-sm" href="http://localhost:4000/eleves/supprimerEleve/<%=data.eleve_Id%>">❌</a></td>
                        <% } %>
                    </tr>
                <% })%>
            </tbody>
        </table>
    </div>
    
        
  </body>
  </html>