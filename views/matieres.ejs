<body>

    <% if(jwtData.roles == 2){%>
      <%- include('headerProfesseur') %>
    <% }else if(jwtData.roles == 3){ %>
      <%- include('headerProviseur') %>
    <% }else{ %>
      <%- include('headerEleve') %>
    <% } %>
  
    <div class="container my-5 w-50 text-center">
  
      <h2 class="mb-4">Liste des matières</h2>
  
      <div class="table-responsive">
        <table class="table table-striped table-hover text-center">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Professeur</th>
              <th>Suppression</th>
            </tr>
          </thead>
          <tbody class="text-center">
            <% dataMatiere.forEach(function(data){ %>
              <tr>
                <td><%= data.nom_matiere %></td>
                <td>
                    <% try{ %>
                        <%= data.nom_perso %>
                        <%= data.prenom_perso %>
                    <% }catch{ %>
                        Non défini
                    <% } %>
                  </td>
                <td><a class="btn btn-outline-danger btn-sm" href="http://localhost:3600/matieres/supprimerMatiere/<%=data.matiere_Id%>"> Supprimer </a></td>
              </tr>
            <% })%>
          </tbody>
        </table>
      </div>
  
      <% if(jwtData.roles == 3){%>
        <h2 class="my-4">Ajout d'une matière</h2>
        <form action="/matieres/ajouterMatiere" method="POST" enctype="application/x-www-form-urlencoded" class="mb-5">
          <div class="input-group row">
            <span for="nom" class="col-sm-2 input-group-text">Nom</span>
              <input type="text" class="form-control" name="nom" id="nom">
          </div>
          <span for = "professeur", style="margin-right: 10px;">Professeur:</span>
          <select type = "text" name = "professeur" id = "professeur" value = "", style="margin-right: 10px;">

            <option value = ""> Non défini </option>

            <% dataProfesseur.forEach(function(data){ %>
                <option value = "<%= data.professeur_Id %>"> <%= data.nom_perso %> <%= data.prenom_perso %> </option>
            <% }) %>

          </select>

          <div class="text-center">
            <button type="submit" class="btn btn-primary">Envoyer</button>
          </div>
        </form>
      <% } %>
  
    </div>
  
  </body>