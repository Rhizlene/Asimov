<body>

    <% if(jwtData.roles == 2){%>
        <%- include('headerProfesseur') %>
      <% }else if(jwtData.roles == 3){ %>
        <%- include('headerProviseur') %>
      <% }else{ %>
        <%- include('headerEleve') %>
      <% } %>
  
      <div class="container my-5 w-50 text-center">
  
        <h2 class="mb-4">Liste des enseignants </h2>
    
        <div class="table-responsive">
          <table class="table table-striped table-hover text-center">
  
        <thead>
  
          <tr>
            <th>Nom</th>
            <th>Prénom</th>
            
            <th>Modification</th>
            <th>Suppression</th>
          </tr>
  
        </thead>
  
        <tbody>
  
          <% dataTotale.forEach(function(data){ %>
            <tr>
                
              <td><%= data.nom_perso %></td>
              <td><%= data.prenom_perso %></td>
             
              <td><a class="btn btn-outline-info btn-sm" href="http://localhost:4000/professeurs/modifierProfesseur/<%=data.id_perso%>"> ✏️ </a></td>
              <td><a class="btn btn-outline-danger btn-sm" href="http://localhost:4000/professeurs/supprimerProfesseur/<%=data.id_perso%>"> ❌ </a></td>
            </tr>
          <% })%>
  
        </tbody>
  
      </table>
  
    </div>

    <hr class="my-4">
  
    <h2 class="my-4"> Ajouter un enseignants </h2>
  
    <div>
  
      <form action="/professeurs/ajouterProfesseur" method="POST" enctype="application/x-www-form-urlencoded">
          
        <div>
            <div class="input-group row">
                <span for="nom" class="col-sm-2 input-group-text">Nom</span>
                  <input type="text" class="form-control" name="nom" id="nom">
              </div>
              <div class="input-group row my-4">
                <span for="prenom" class="col-sm-2 input-group-text">Prenom</span>
                  <input type="text" class="form-control" name="prenom" id="prenom">
              </div>
              <div class="input-group row">
                <span for="mdp" class="col-sm-2 input-group-text">Mot de passe</span>
                  <input type="text" class="form-control" name="mdp" id="mdp">
              </div>
        </div>
  
        <div class="text-center my-3">
            <button type="submit" class="btn btn-block mx-3 text-light" style="background-color: #2e2ca2;">Envoyer</button>
          </div>
  
      </form>
  
    </div>
        
  </body>
  </html>